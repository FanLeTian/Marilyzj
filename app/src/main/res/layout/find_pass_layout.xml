<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <include layout="@layout/toolbar_back" />


    <LinearLayout
        android:id="@+id/find_pass_account"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="11dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/bg_edittext_selector"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/find_accout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="请输入邮箱"
            android:inputType="text"
            android:textCursorDrawable="@null"
            android:textColorHint="#A4A4A4"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_password_ll"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="11dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/bg_edittext_selector"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/new_pass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="center_vertical"
            android:hint="请设置密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textColorHint="#A4A4A4"
            android:textSize="14sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/find_yanzheng"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="11dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/bg_edittext_selector"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/find_yanzeng_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1.5"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:gravity="center_vertical"
            android:hint="请输入邮箱验证码"
            android:inputType="number"
            android:maxLength="20"
            android:textColorHint="#A4A4A4"
            android:textSize="14sp" />


        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:text="发送验证码"
            android:background="#EB6622"
            android:id="@+id/send_yanzheng"
            />

    </LinearLayout>



    <Button
        android:id="@+id/find_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="20dp"
        android:background="#EB6622"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />



</LinearLayout>